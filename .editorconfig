root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{Dockerfile,*.conf,*.graphql,*.json,*.md,*.sh,*.yml,Rakefile,*.rb}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 2

[*.go]
indent_style = tab

[*.sql]
indent_style = space
indent_size = 4
